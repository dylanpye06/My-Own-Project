@model Osiansdrystonewalls.com.Models.ViewModels.AdminEditJobRequest
@{
}

<div class="bg-secondary bg-opacity-25 py-2">
    <div class="container">
        <h1>Admin Edit Job Request</h1>
    </div>
</div>

<div class="container py-5">

    <form method="post">

        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" id="Id" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Job Name</label>
            <input type="text" id="JobName" class="form-control" asp-for="JobName"/>
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <input type="text" id="Description" class="form-control" asp-for="Description" />
        </div>

        <div class="mb-3">
            <label class="form-label">Customer Name</label>
            <input type="text" id="Customer" class="form-control" asp-for="Customer.FullName" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Customer Email</label>
            <input type="text" id="Customer" class="form-control" asp-for="Customer.Email" readonly />
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-success">Save Changes</button>

                <button type="submit" class="btn btn-danger ms-2" asp-area="" asp-controller="Admin" asp-action="DeleteJobRequest">Delete</button>
            </div>
        </div>
    </form>
</div>

