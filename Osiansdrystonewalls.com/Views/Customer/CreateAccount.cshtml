@model Osiansdrystonewalls.com.Models.ViewModels.CreateAccountRequest
@{
}

<div class="bg-secondary bg-opacity-25 py-2">
    <div class="container">
        <h1>Create Your Account</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">

        <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" id="fullName" asp-for="FullName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" id="email" asp-for="Email" />
        </div>

        <div class="mb-3">
            <label class="form-label">Phone Number</label>
            <input type="text" class="form-control" id="phoneNumber" asp-for="PhoneNumber" />
        </div>

        <div class="mb-3">
            <label class="form-label">Post Code</label>
            <input type="text" class="form-control" id="postCode" asp-for="PostCode" />
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="text" class="form-control" id="password" asp-for="Password" />
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-success" asp-area="" asp-controller="Customer" asp-action="CreateAccount">Create Account</button>

                <a class="btn btn-success ms-md-3" asp-area="" asp-controller="Home" asp-action="HomePage">Back</a>
            </div>
        </div>

    </form>
</div>