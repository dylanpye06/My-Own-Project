@model Osiansdrystonewalls.com.Models.ViewModels.AdminEditJobRequest
@{
}

<div class="bg-secondary">
    <div class="container bg-secondary text-light py-2">
        <h1>Edit Bookings</h1>
    </div>
</div>

<div class="container py-5">

    <form method="post">

        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" id="Id" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" id="JobName" class="form-control" asp-for="JobName" />
        </div>

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="text" id="Description" class="form-control" asp-for="Description" />
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-success ms-2" asp-area="" asp-controller="Customer" asp-action="CustomerViewBooking">Save Changes</button>

                <button type="submit" class="btn btn-danger ms-2" asp-area="" asp-controller="Customer" asp-action="DeleteBooking">Delete</button>
            </div>
        </div>
    </form>
</div>