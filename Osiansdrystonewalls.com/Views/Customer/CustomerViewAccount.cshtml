@model Osiansdrystonewalls.com.Models.Domain.Customer

@{
}

<div class="bg-secondary bg-opacity-25 py-2">
    <div class="container">
        <h1>View Account</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Post Code</th>
                    <th>Password</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>               
                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.FullName</td>
                        <td>@Model.Email</td>
                        <td>@Model.PhoneNumber</td>
                        <td>@Model.PostCode</td>
                        <td>@Model.Password</td>
                        <td>
                            <a asp-area="" asp-controller="Customer" asp-action="CustomerEditAccount"
                               asp-route-id="@Model.Id">Edit</a>
                        </td>
                    </tr>
            </tbody>
        </table>

        <div class="container mb-3 py-2">
            <a class="btn btn-success" asp-area="" asp-controller="Customer" asp-action="LoggedIn" asp-route-id="@Model.Id">Back</a>
        </div>

    }
    else
    {
        <p> No Accounts Found </p>
    }
</div>
