@model Osiansdrystonewalls.com.Models.ViewModels.LogInRequest
@{
}

<div class="bg-secondary bg-opacity-25 py-2">
    <div class="container">
        <h1>If you already have an account please log in below.</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">

        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" id="checkemail" asp-for="CheckEmail" />
        </div>

        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="text" class="form-control" id="checkpassword" asp-for="CheckPassword" />
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="submit" class="btn btn-success" asp-area="" asp-controller="Customer" asp-action="LogIn">Log In</button>

                <a class="btn btn-success ms-md-3" asp-area="" asp-controller="Customer" asp-action="CreateAccount">Create Account</a>

                <a class="btn btn-success ms-md-3" asp-area="" asp-controller="Home" asp-action="HomePage">Back</a>
            </div>
        </div>
    </form>
</div>
